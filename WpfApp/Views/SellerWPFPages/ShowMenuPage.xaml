<Page x:Class="WpfApp.Views.SellerWPFPages.ShowMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views.SellerWPFPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowMenuPage">

    <Grid>
        <TextBlock Text="Panel Sprzedawcy" Style="{StaticResource Title}"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="1. Dodaj nowy produkt" Tag="1" Click="menu_button_click" />
            <Button Content="2. Przejrzyj i edytuj produkty" Tag="2" Click="menu_button_click"/>
            <Button Content="3. Wyjdź z aplikacji" Tag="3" Click="menu_button_click"/>
        </StackPanel>
    </Grid>
</Page>
