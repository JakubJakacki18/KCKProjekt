<Page x:Class="WpfApp.Views.UserWPFPages.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views.UserWPFPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <StackPanel Orientation="Vertical">
            <TextBox Margin="20" Name="input1"></TextBox>
            <TextBox Margin="20" Name="input2"></TextBox>
            <Label   Margin="20" Name="output"></Label>
            <Button Margin="40" Click="Button_Click">Zaloguj się</Button>
        </StackPanel>

    </Grid>
</Page>
