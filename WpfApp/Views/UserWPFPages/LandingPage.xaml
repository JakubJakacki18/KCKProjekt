<Page x:Class="WpfApp.Views.UserWPFPages.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views.UserWPFPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LandingPage">

    <Grid>
        
        
        <Label Content="mójSklep" Foreground="#0197F6" FontSize="50" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="300">

            <Label HorizontalAlignment="Center" Content="Chcesz przejść do logowania czy rejestracji?" Margin="0,20,0,20"/>
                <Button x:Name="SignInButton" Content="Zaloguj się!" Click="SignInButton_Click"  />
            <Button x:Name="SignUpButton" Content="Zarejestruj się!" Click="SignUpButton_Click" Margin="0,0,0,30" />
        </StackPanel>

    </Grid>
</Page>
