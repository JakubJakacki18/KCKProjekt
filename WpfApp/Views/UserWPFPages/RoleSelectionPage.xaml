<Page x:Class="WpfApp.Views.UserWPFPages.RoleSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views.UserWPFPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoleSelectionPage">

    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <StackPanel Orientation="Vertical">
            <Label   Margin="20" Name="role_selection_label" Content="Zaloguj się jako: " ></Label>
            <Button Margin="20" Name="seller_button" Content="Sprzedający" HorizontalAlignment="Center" VerticalAlignment="Top" Click="seller_button_Click"/>
            <Button Margin="20" Name="buyer_button" Content="Kupujący" HorizontalAlignment="Center" VerticalAlignment="Top" Click="buyer_button_Click"/>

        </StackPanel>
    </Grid>
</Page>
