<Page x:Class="WpfApp.Views.UserWPFPages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views.UserWPFPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUpPage">

    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <StackPanel Orientation="Vertical">
            <Label Content="Zarejestruj się"/>
            <Button x:Name="sign_up_button" Content="Button" HorizontalAlignment="Left" Margin="360,328,0,0" VerticalAlignment="Top" Click="sign_up_button_Click"/>
            <Label Content="Login: "/>
            <TextBox Margin="20" Name="login"></TextBox>
            <Label Content="Hasło: "/>
            <TextBox Margin="20" Name="password"></TextBox>
            <Label Content="Powtórz hasło: "/>
            <TextBox Margin="20" Name="confirm_password"></TextBox>
        </StackPanel>
    </Grid>
</Page>
