<Window x:Class="WpfApp.Views.BuyerWPFPages.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Views.BuyerWPFPages"
        mc:Ignorable="d"
        Title="Dodaj do koszyka" Height="500" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
        <Label Name="IdLabel" Content="Kod kreskowy: " Margin="5,15,0,0"/>
            <Label Name="NameLabel" Content="Nazwa: " Margin="5,5,0,0"/>
            <Label Name="DescriptionLabel" Content="Opis: " Margin="5,5,0,0"/>
            <Label Name="PriceLabel" Content="Cena: " Margin="5,5,0,0"/>
            <Label Name="QuantityLabel" Content="Ilość dostępnych sztuk: " Margin="5,5,0,0"/>

        <!-- Question and TextBox for quantity -->
            <Label Name="QuantityQuestionLabel" Content="Ile sztuk chcesz dodać do koszyka?" Margin="5,10,0,0"/>
        <TextBox Name="QuantityTextBox" Width="200"/>

        <!-- Price to pay -->
        <Label Name="PriceToPayLabel"/>

        <!-- Buttons -->
        <Button Name="AddToCartButton" Content="Dodaj" />
        <Button Name="RejectButton" Content="Zrezygnuj"/>
        </StackPanel>
    </Grid>
</Window>
